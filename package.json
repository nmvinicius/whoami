{
  "name": "whoami",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run build:en && npm run build:pt && npm run build:copy-root",
    "build:en": "ng build --configuration=production,en-US --base-href /whoami/",
    "build:pt": "ng build --configuration=production,pt --base-href /whoami/pt-BR/ --delete-output-path=false",
    "build:copy-root": "cp -r dist/whoami/browser/en-US/* dist/whoami/browser/ && mv dist/whoami/browser/pt dist/whoami/browser/pt-BR",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "prepare": "husky"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.5.1",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@ng-icons/bootstrap-icons": "^33.0.0",
    "@ng-icons/core": "^33.0.0",
    "@ng-icons/feather-icons": "^33.0.0",
    "@ng-icons/heroicons": "^33.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.2",
    "@angular/cli": "^21.0.2",
    "@angular/compiler-cli": "^21.0.0",
    "@angular/localize": "^21.0.3",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@tailwindcss/postcss": "^4.1.12",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.12",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
